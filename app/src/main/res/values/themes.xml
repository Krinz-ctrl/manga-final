<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen Theme -->
    <style name="Theme.Manga.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/manga_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Manga</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Manga" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
</resources>